# Import libraries
source "$MUSICBOX_BIN_DIR/formatlib"
source "$MUSICBOX_BIN_DIR/gdrivelib"

info "Attempting to download songs"

# Get the song list
downloadfile "$(getfileid "Song List")" "$MUSICBOX_TMP_DIR"/song-list
# Remove comments
grep -o '^[^#]*' file "$MUSICBOX_TMP_DIR"/song-list > "$MUSICBOX_TMP_DIR/clean-song-list"
mv "$MUSICBOX_TMP_DIR/clean-song-list" "$MUSICBOX_CACHE_DIR/song-list"
# Download the songs
mkdir "$MUSICBOX_CACHE_DIR/music"
# From Youtube
while read -r url; do
yt-dlp -x --audio-format mp3 --audio-quality 0 --sponsorblock-remove all -o "$MUSICBOX_CACHE_DIR/music/yt.%(id)s.%(ext)s" "$url"
done <"$MUSICBOX_TMP_DIR/song-list"
# From the extra songs folder
mkdir "$MUSICBOX_TMP_DIR/extra-songs"
downloadfile "$(getfileid "Extra Songs")" "$MUSICBOX_TMP_DIR/extra-songs"
count=1
for i in "$MUSICBOX_CACHE_DIR/extra-songs/"*; do
mv "$i" "$MUSICBOX_CACHE_DIR/music/extra-song-$count.mp3"
count=$((count+1))
done
rm -R "$MUSICBOX_TMP_DIR/extra-songs"
