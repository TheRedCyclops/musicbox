# Import libraries
source "$MUSICBOX_BIN_DIR/formatlib"
source "$MUSICBOX_BIN_DIR/configlib"
# Download the necesary files
"$MUSICBOX_BIN_DIR/down-config"   &
"$MUSICBOX_BIN_DIR/down-schedule" &
"$MUSICBOX_BIN_DIR/down-songs"    &
# Check if post-processing is enabled
# Wait to finish getting the configuration
wait "$(pidof down-config)"
if getvalue post-processing; then
    # Wait for the all the songs to be downloaded
    wait "$(pidof down-songs)"
    # Run the post-processor
    "$MUSICBOX_BIN_DIR/post-processor"
fi
wait
# Check for the case of no songs
if [ "$(ls "$MUSICBOX_CACHE_DIR/music/*")" = '' ]; then
error "No songs found!"
fi
scheduler
