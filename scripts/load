#!/bin/bash
# shellcheck shell=bash disable=1091
# Create pidfile
echo $$ > /run/musicbox.pid
# Import libraries
source "$MUSICBOX_BIN/libraries/formatlib"
source "$MUSICBOX_BIN/libraries/configlib"
# Download the necesary files
"$MUSICBOX_BIN/downloaders/down-config"   &
"$MUSICBOX_BIN/downloaders/down-schedule" &
"$MUSICBOX_BIN/downloaders/down-songs"    &
# Check if post-processing is enabled
# Wait to finish getting the configuration
wait "$(pidof get-configuration)"
if getvalue post-processing; then
    # Wait for the all the songs to be downloaded
    wait "$(pidof get-songs)"
    # Run the post-processor
    "$MUSICBOX_BIN/sound/post-processor"
fi
wait
# Check for the case of no songs
if [ "$(ls "$MUSICBOX_CACHE_DIR/music/*")" = '' ]; then
error "No songs found!"
fi
scheduler
rm /run/musicbox.pid